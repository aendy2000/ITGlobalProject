                                            </td>
                                            <td class="fw-medium text-end">
                                                <!-- text -->
                                                @Model.TaxableSalary.Value.ToString("0,0").Replace(".", ",") đ
                                            </td>
                                        </tr>
                                    }
                                }
                                @if (Model.NumberDaysLeave.Value > 0)
