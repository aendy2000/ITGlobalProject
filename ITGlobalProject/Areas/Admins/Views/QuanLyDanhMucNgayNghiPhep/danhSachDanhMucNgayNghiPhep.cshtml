@model IEnumerable<ITGlobalProject.Models.LeaveDate>
@{
    ViewBag.Title = "Danh Mục Ngày Nghỉ Phép";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";

    int i = 0;
}

<div class="container-fluid p-4">
    <div class="row ">
        <div class="col-lg-12 col-md-12 col-12">
            <!-- Page header -->
            <div class="border-bottom pb-4 mb-4 d-md-flex align-items-center justify-content-between">
                <div class="mb-2 mb-lg-0">
                    <h1 class="mb-0 h2 fw-bold">Quản Lý Danh Mục Nghỉ Lễ </h1>
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Overview", "Dashboard")">Trang Chủ</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("danhSachDanhMucNgayNghiPhep", "QuanLyDanhMucNgayNghiPhep")">Quản Lý Danh Mục Nghỉ Lễ</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Danh Sách Ngày Nghỉ Lễ
                            </li>
                        </ol>
                    </nav>
                </div>
                <!-- button -->
                <div class="text-nowrap mb-2 mb-lg-0">
                    <a href="#" class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#themNgayNghiPhepModal">
                        Thêm Mới
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- row -->
    <div id="danhSachPartial" class="row">
        <!-- col -->
        <div class="col-md-12 col-12 mb-5">
            <!-- card -->
            <div class="card">
                <!-- table -->
                <table id="dataTableBasic" class="table table-hover" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class=" border-top-0">#</th>
                            <th scope="col" class=" border-top-0">Tên Ngày Nghỉ</th>
                            <th scope="col" class=" border-top-0">Ngày Nghỉ</th>
                            <th scope="col" class=" border-top-0">Loại Ngày Nghỉ</th>
                            <th scope="col" class=" border-top-0"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                i++;
                                <input hidden value="@item.ID" id="ids@(item.ID)" />
                                <input hidden value="@item.Name" id="names@(item.ID)" />
                                <input hidden value="@(DateTime.Now.Year + item.Date.ToString("-MM-dd"))" id="dates@(item.ID)" />
                                <input hidden value="@item.DateType" id="datetypes@(item.ID)" />

                                var appends = item.OnLeave.ToList();
                                <tr>
                                    <td class="align-middle">
                                        @i
                                    </td>
                                    <td class="align-middle ">
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <h4 class="mb-0"><a href="#" class="text-inherit">@item.Name</a></h4>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        @item.Date.ToString("dd/MM/")<span>@DateTime.Now.Year</span>
                                    </td>
                                    <td class="align-middle">
                                        @item.DateType
                                    </td>
                                    <td class="text-muted align-middle text-end">
                                        <div class="dropdown dropstart">
                                            <a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1"
                                               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fe fe-more-vertical"></i>
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="Dropdown1">
                                                <span class="dropdown-header">Hành động</span>
                                                <a role="button" name="@item.ID" id="chinhsua@(item.ID)" class="dropdown-item" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight">
                                                    <i class="fe fe-edit dropdown-item-icon"></i>Chỉnh sửa danh mục
                                                </a>
                                                @if (appends.Count < 1)
                                                {
                                                    <div class="dropdown-divider"></div>
                                                    <a role="button" name="@item.ID" id="xoa@(item.ID)" class="dropdown-item" href="#">
                                                        <i class="fe fe-trash dropdown-item-icon"></i>Xóa danh mục
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="align-middle text-center">
                                    Không có dữ liệu để hiển thị.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Chỉnh sửa danh mục ngày nghỉ phép -->
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" style="width: 800px;">
            <div class="offcanvas-body" data-simplebar>
                <div style="margin-bottom: -20px" class="offcanvas-header px-2 pt-0">
                    <h4 class="offcanvas-title" id="offcanvasExampleLabel"><i class="fe fe-edit"> </i> Chỉnh Sửa Ngày Nghỉ Lễ</h4>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <hr class="my-4" />
                <!-- card body -->
                <div class="container ">
                    <!-- form -->
                    <div class="row">
                        <!-- form group -->
                        <div class="mb-3 col-md-12">
                            <label style="font-weight: bold;" class="form-label">Tên Ngày Nghỉ <span class="text-danger">*</span></label>
                            <input id="name" name="name" type="text" class="form-control" placeholder="Nhập tên ngày nghỉ">
                            <input id="id" name="id" hidden>
                            <p hidden style="color: red; font-size: 13px" id="EdittenNgayNghiValidation"></p>
                        </div>
                        <!-- form group -->
                        <div class="mb-3 col-md-12">
                            <label style="font-weight: bold;" class="form-label">Ngày Nghỉ <span class="text-danger">*</span></label>
                            <input id="date" name="date" type="text" class="form-control flatpickr" placeholder="Chọn ngày nghỉ">
                            <p hidden style="font-size: 13px; color:red;" id="EditdateValidation"></p>
                        </div>

                        <div class="mb-3 col-md-12">
                            <label style="font-weight: bold;" class="form-label">Loại Ngày Nghỉ <span class="text-danger">*</span></label>
                            <select name="datetype" id="datetype" class="selectpicker" data-width="100%">
                                <option value="">Chọn loại ngày nghỉ</option>
                                <option value="Cả Ngày">Cả Ngày</option>
                                <option value="Nữa Ngày">Nữa Ngày</option>
                            </select>
                            <p hidden style="font-size: 13px; color:red;" id="EditloaingaynghiValidation"></p>
                        </div>
                        <div style="text-align: right; padding-top: 20px" class="mb-2 col-12 col-md-6">
                            <button id="dongChinhSua" style="width: 230px" class="btn btn-outline-danger" data-bs-dismiss="offcanvas" aria-label="Close">
                                Hủy
                            </button>
                        </div>
                        <div style=" padding-top: 20px" class="mb-2 col-12 col-md-6">
                            <a role="button" id="luuChinhSua" style="width: 230px" class="btn btn-success">
                                Lưu
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- Thêm danh mục ngày nghỉ phép -->
<div class="modal fade modal-lg" id="themNgayNghiPhepModal" tabindex="-1" role="dialog"
     aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="themNgayNghiPhepModal"><i class="fe fe-briefcase"> </i> Thêm Ngày Nghỉ Lễ</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <!-- form -->
                <div class="row">

                    <div class="mb-3 col-md-12">
                        <label style="font-weight: bold;" class="form-label">Tên Ngày Nghỉ <span class="text-danger">*</span></label>
                        <input id="tenngaynghi" type="text" class="form-control" placeholder="Nhập tên ngày nghỉ">
                        <p hidden style="font-size: 13px; color:red;" id="tenNgayNghiValidation"></p>
                    </div>
                    <div class="mb-3 col-md-12">
                        <label style="font-weight: bold;" class="form-label">Ngày Nghỉ <span class="text-danger">*</span></label>
                        <input id="ngaynghi" name="ngaynghi" type="text" class="form-control flatpickr" placeholder="Chọn ngày nghỉ">
                        <p hidden style="font-size: 13px; color:red;" id="NgayNghiValidation"></p>
                    </div>

                    <div class="mb-3 col-md-12">
                        <label style="font-weight: bold;" class="form-label">Loại Ngày Nghỉ <span class="text-danger">*</span></label>
                        <select name="loaingaynghi" id="loaingaynghi" class="selectpicker" data-width="100%">
                            <option value="">Chọn loại ngày nghỉ</option>
                            <option value="Cả Ngày">Cả Ngày</option>
                            <option value="Nữa Ngày">Nữa Ngày</option>
                        </select>
                        <p hidden style="font-size: 13px; color:red;" id="loaiNgayNghiBatdauValidation"></p>
                    </div>

                    <div style="text-align: right; padding-top: 20px" class="mb-2 col-12 col-md-6">
                        <button id="dongthemdanhmuc" style="width: 230px" class="btn btn-outline-danger" type="reset" data-bs-dismiss="modal" aria-label="Close">
                            Hủy
                        </button>
                    </div>
                    <div style=" padding-top: 20px" class="mb-2 col-12 col-md-6">
                        <a role="button" id="themdanhmucngaynghiphep" style="width: 230px" class="btn btn-success">
                            Lưu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/ValidationAlert/Admin/QuanLyDanhMucNghiPhep/ThemDanhMucNgayNghiPhep.js"></script>
<script src="~/ValidationAlert/Admin/QuanLyDanhMucNghiPhep/XoaDanhMucNgayNghiPhep.js"></script>
<script src="~/ValidationAlert/Admin/QuanLyDanhMucNghiPhep/SuaDanhMucNgayNghiPhep.js"></script>


