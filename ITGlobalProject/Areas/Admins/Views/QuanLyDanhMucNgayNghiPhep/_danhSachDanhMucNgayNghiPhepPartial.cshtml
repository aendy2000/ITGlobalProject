@model IEnumerable<ITGlobalProject.Models.LeaveDate>
@{ 
    int i = 0;
}

<div id="danhSachPartial" class="row">
    <!-- col -->
    <div class="col-md-12 col-12 mb-5">
        <!-- card -->
        <div class="card">
            <!-- table -->
            <table id="dataTableBasic" class="table table-hover" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class=" border-top-0">#</th>
                        <th scope="col" class=" border-top-0">Tên</th>
                        <th scope="col" class=" border-top-0">Ngày bắt đầu</th>
                        <th scope="col" class=" border-top-0">Ngày kết thúc</th>
                        <th scope="col" class=" border-top-0">Nhân viên</th>
                        <th scope="col" class=" border-top-0"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            i++;
                            <input hidden value="@item.ID" id="ids@(item.ID)" />
                            <input hidden value="@item.Name" id="names@(item.ID)" />
                            <input hidden value="@item.StartDay" id="stdays@(item.ID)" />
                            <input hidden value="@item.StartMonth" id="stmonths@(item.ID)" />
                            <input hidden value="@item.EndDay" id="enddays@(item.ID)" />
                            <input hidden value="@item.EndMonth" id="endmonths@(item.ID)" />

                            var appends = item.OnLeave.ToList();
                            <tr>
                                <td class="align-middle">
                                    @i
                                </td>
                                <td class="align-middle ">
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h4 class="mb-0"><a href="#" class="text-inherit">@item.Name</a></h4>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    @item.StartDay Tháng @item.StartMonth
                                </td>
                                <td class="align-middle">
                                    @item.EndDay Tháng @item.EndMonth
                                </td>
                                <td class="align-middle ">
                                    <div class="avatar-group">
                                        @if (appends.Count < 1)
                                        {
                                            <span>Chưa được áp dụng cho tài khoản nào</span>
                                        }
                                        else if (appends.Count < 4)
                                        {
                                            foreach (var posi in item.OnLeave)
                                            {
                                                <span class="avatar avatar-md avatar-primary imgtooltip" data-template="@posi.ID">
                                                    <span class="avatar-initials rounded-circle ">
                                                        @posi.Employees.Name.Substring(0, 1)
                                                    </span>

                                                    <span id="@posi.ID" class="d-none">
                                                        <span class="mb-0 h6">@posi.Employees.Name</span>

                                                    </span>
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            int max = 3;
                                            for (int d = 0; d < max; d++)
                                            {

                                                <span class="avatar avatar-md avatar-primary imgtooltip" data-template="@appends[d].ID">
                                                    <span class="avatar-initials rounded-circle ">
                                                        @appends[d].Employees.Name.Substring(0, 1)
                                                    </span>

                                                    <span id="@appends[d].ID" class="d-none">
                                                        <span class="mb-0 h6">@appends[d].Employees.Name</span>

                                                    </span>
                                                </span>

                                            }
                                            <span class="avatar avatar-md ">
                                                <span class="avatar-initials rounded-circle bg-light text-dark">@(appends.Count - 3)+</span>
                                            </span>
                                        }

                                    </div>
                                </td>
                                <td class="text-muted align-middle text-end">
                                    <div class="dropdown dropstart">
                                        <a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1"
                                           data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fe fe-more-vertical"></i>
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="Dropdown1">
                                            <span class="dropdown-header">Hành động</span>
                                            <a role="button" name="@item.ID" id="chinhsua@(item.ID)" class="dropdown-item" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight">
                                                <i class="fe fe-edit dropdown-item-icon"></i>Chỉnh sửa danh mục nghỉ phép
                                            </a>
                                            @if (appends.Count < 1)
                                            {
                                                <div class="dropdown-divider"></div>
                                                <a role="button" name="@item.ID" id="xoa@(item.ID)" class="dropdown-item" href="#">
                                                    <i class="fe fe-trash dropdown-item-icon"></i>Xóa danh mục nghỉ phép
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td hidden></td>
                            <td hidden></td>
                            <td hidden></td>

                            <td colspan="6" class="align-middle text-center">
                                Không có dữ liệu để hiển thị.
                            </td>

                            <td hidden></td>
                            <td hidden></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
