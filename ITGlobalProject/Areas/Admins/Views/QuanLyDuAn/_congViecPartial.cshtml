                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <img src="@item.Employees.Avatar"
                                                                     alt="" class="avatar avatar-xs rounded-circle imgtooltip"
                                                                     data-template="ToltipName_@item.ID">
                                                            }
                                                            <!-- text -->
                                                            <div id="ToltipName_@item.ID" class="d-none">
                                                                <h6 class="mb-0">@item.Employees.Name</h6>
                                                            </div>
                                                            <!-- text -->
                                                            <div class="ms-2">
                                                                <span style="font-weight:bold" class="fs-6">
                                                                    <i style="font-weight:bold" class="fe fe-clock me-1"></i>@item.Deadline.ToString("dd") Thg @item.Deadline.ToString("MM, yyyy")
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div id="trangThai_@item.ID">
                                                            <span class="badge-dot bg-success me-2 d-inline-block align-middle imgtooltip" data-template="stateid@(item.ID)"></span>
                                                            <div id="stateid@(item.ID)" class="d-none">
                                                                <h6 class="mb-0">Đã hoàn thành</h6>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- card -->

            </div>
        </div>
    </div>
