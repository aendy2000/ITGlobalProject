        <div class="col-lg-9 col-md-8 col-12">
            <!-- Card -->
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Thông Tin Cá Nhân  </h3>
                    <p class="mb-0">
                        Các thông tin cá nhân được hiển thị dưới dạng xem.
                    </p>
                </div>
                <!-- Card body -->
                <div class="card-body">
                    <div>
                        <form class="row">
                            <!-- First name -->
                            <div class="mb-3 col-12 col-md-6">
                                <label style="font-weight:bold" class="form-label" for="fname">Họ và Tên</label>
                                <input readonly value="@Model.Name" type="text" id="fname" class="form-control" placeholder="Nguyễn Văn A..." required />
                            </div>
                            <div class="mb-3 col-12 col-md-6">
                                <label style="font-weight:bold" class="form-label" for="fname">Số CMND/CCCD</label>
                                <input readonly value="@Model.IdentityCard" type="text" id="fname" class="form-control" placeholder="07020000xxxx..." required />
                            </div>
                            <!-- Phone -->
                            <div class="mb-3 col-12 col-md-6">
                                <label style="font-weight:bold" class="form-label" for="phone">Số điện thoại</label>
                                <input readonly value="@Model.TelephoneMobile" type="tel" id="phone" class="form-control" placeholder="0999888777..." required />
                            </div>
                            <!-- Birthday -->
                            <div class="mb-3 col-12 col-md-6">
                                <label style="font-weight:bold" class="form-label" for="birth">Ngày sinh</label>
                                <input style="background-color: #F5F4F8" disabled value="@Model.Birthday.ToString("yyyy-MM-dd")" class="form-control flatpickr" type="text" placeholder="2000-01-01..." id="birth"
                                       name="birth" />
                            </div>
                            <div class="mb-3 col-12 col-md-6">
                                <label style="font-weight:bold" class="form-label" for="phone">Email</label>
                                <input readonly value="@Model.WorkEmail" type="text" id="email" class="form-control" placeholder="example@itglobal.net..." required />
                            </div>
                            <!-- Birthday -->
                            <div class="mb-3 col-12 col-md-6">
                                <label style="font-weight:bold" class="form-label">Giới tính</label>
                                <input readonly value="@Model.Sex" type="text" id="email" class="form-control" placeholder="example@itglobal.net..." required />
                            </div>
                            <div class="mb-3 col-12 col-md-12">
                                <label style="font-weight:bold" class="form-label" for="address">Địa chỉ </label>
                                <textarea readonly rows="4" id="diachinha" name="diachinha" class="form-control" placeholder="Số này/kia đường gì đó, Phường mấy, Quận gì, Thành Phố bla bla">@Model.Address</textarea>
